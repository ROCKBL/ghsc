/* pages/mylevel/mylevel.wxss */

.mylevel{
	width: 100%;
	height: 100vh;
	background: linear-gradient(180deg, #FFD9BC 0%, rgba(118, 112, 107, 0) 100%);
}

.mylevelContainer{
	width: calc(100% - 20px);
	margin: auto;
	position: relative;
	box-sizing: border-box;
	height: 100%;
}

.background{
	/* width: calc(100% - 20px); */
	width: 100%;
	/* height: 100%; */
	position:absolute; 
	background-size:100% 100%;
	z-index: 0;
}

.userLine{
	display: flex;
	align-items: center;
	padding: 30px;
	color: white;
	position: relative;
	width: 100%;
	box-sizing: border-box;
	/* height: 120px; */
	z-index: 99;
	top: 0px;
	left: 0px;
}
.avatar{
	height: 60px;
	border-radius: 50%;
	width: 60px;
	margin-right: 20rpx;
}
.avatarUnlogin{
	width: 60px;
	height: 60px;
	margin-right: 20rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.avatarUnloginIcon{
	font-size: 60px;
}

.userCenterInfoLevel{
	display: flex;
	align-items: center;
	font-size: 28rpx;
	margin-top: 24rpx;
}
.userCenterInfoLevel .iconfont{
	font-size:28rpx;
	margin-right: 10rpx;
}
.userCenterInfoName{
	font-size: 32rpx;
}


.userlevelLine{
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	z-index: 99;
	position: absolute;
	width: 100%;
	top: 105px;
}

.userlevelLineIcon{
	width: 160rpx;
	height: 160rpx;
}
.userlevelLineLabel{
	color: #F2D1A4;
	font-size: 60rpx;
	margin-top: 10px;
}