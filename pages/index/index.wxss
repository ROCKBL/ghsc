.containerIndex{
    padding: 0rpx 26rpx;
}
.van-icon-search{
    color:#39B196 ;
}
.van-search__content{
    border: 1px solid #39B196;
    border-radius: 5px!important;
    background-color: white!important;
}
.van-search{
    /* padding: 10rpx 10rpx!important; */
}

.cateImg{
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
}
.cateText{
    font-size: 30rpx;
    color: #333333;
    margin-top:10px;
}

.banner{
    width: 100%;
    /* height: fit-content; */
}

.countItem {
    display: inline-block;
    width: 20px;

    margin-right: 5px;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
    vertical-align: middle;
    background-color: #EE0B39;
    border-radius: 3px;
}

.timeLimitHead{
    display: flex;
    font-size: 32rpx;
    align-items: center;
    padding: 10rpx 0rpx;
}
.timeLimitMore{
    margin-left: auto;
    display: flex;
    align-items: center;
    color: #39B196;
}
.timeLimit .clockIcon{
    font-size: 40rpx;
    color: #39B196;

}
.timeLimit .headLabel{
    margin:0px 20rpx;
}

.timeLimit .timiLimitImg{
    width: 100%;
}

.timeLimit .tagsWrap{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 5px;
}
.timeLimit .tag{
    font-size: 20rpx;
    color: #EE0B39;
    border-radius: 2px;
    border:1rpx solid #EE0B39;
    padding: 4rpx 8rpx;
}

.timeLimit .introduce{

    font-size: 22rpx;
    color: #939796;
    margin-top: 20rpx;
}
.timeLimit .priceWrap{
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}
.timeLimit .vipImg{
    width: 40rpx;
}
.timeLimit .vipPrice{
    color: #EE0B39;
    font-size: 22rpx;
}
.timeLimit .price{
    color: #939796;
    font-size: 20rpx;
    text-decoration: line-through;
}

.timeLimit .van-grid-item__content--center{
    align-items:initial;
    -webkit-align-items:initial;
}


.recommend .recommendHead{
    display: flex;
    justify-content: center;
}
.recommend .recommendHeadIcon{
    font-size: 50rpx;
    color: #39B196;
}
.recommend .priceWrap{
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}
.recommend .vipImg{
    width: 40rpx;
}
.recommend .vipPrice{
    color: #EE0B39;
    font-size: 22rpx;
}
.recommend .price{
    color: #939796;
    font-size: 20rpx;
    text-decoration: line-through;
}
.recommend .sellNum{
    color: #939796;
    font-size: 20rpx;
    margin-left: auto;
}
.recommend .van-grid-item__content--center{
    align-items:initial;
    -webkit-align-items:initial;
}
.recommend .recommendGoodsName{
    font-size: 26rpx;
    color: #333333;
    margin-top: 10rpx;
}
.recommend .btnWrap{
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-top: 20rpx;
}
.recommend .shareBtn{
    width: 48%;
    border-color: #39B196;
    padding:4rpx 10rpx;
    color: #39B196;
    font-size: 24rpx;

}
.recommend .addCartBtn{
    width: 48%;
    font-size: 24rpx;
    padding:4rpx 10rpx;
    background-color: #39B196;
    border: 1px solid #39B196;

}
.recommend .recommendTip{
    text-align: center;
    font-size: 30rpx;
    color: #999999;
    margin-bottom: 20rpx;
}

.signIn{
    position: fixed;
    right: 0px;
    top: 20%;
    z-index: 99;
    background-color: white;
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
    font-size: 30rpx;
    border-radius: 30rpx 0px 0px 30rpx;
}
.signInIcon{
    font-size: 42rpx;
    margin-right: 10rpx;
}


.goodsImg{
    width: 100%;
    height: 100%;
}
.goodsImgWrap{
    width: 100%;
    height:220rpx;
}
.goodsImgWrapTimeLine{
    width: 100%;
    height:160rpx;
}