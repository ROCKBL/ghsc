/* pages/myBalance/myBalance.wxss */
.balancePage{
	background: #F8F8F8;
	min-height: 100vh;
}

.balanceBlock{
	width: calc(100% - 60rpx);
	margin: auto;
	background-color: rgba(255, 255, 255, 1);
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-top: 30rpx;
	padding-top: 72rpx;
	padding-bottom: 52rpx;
}
.balanceImg{
	width: 130rpx;
	height: 130rpx;
	margin-bottom: 56rpx;
}
.balanceValue{
	color: rgba(51, 51, 51, 1);
	font-size: 64rpx;
	font-weight: bold;
	margin-bottom: 10rpx;
}
.balanceLabel{
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
	margin-bottom: 50rpx;
	font-weight: bold;
}

.balanceBtns{
	
	display: flex;
	align-items: center;
}
.balanceBtn1{
	color: rgba(57, 177, 150, 1)!important;
	margin-right: 60rpx;
	font-size: 30rpx!important;
	/* padding:4rpx 40rpx!important; */
	border-color: rgba(57, 177, 150, 1)!important;
	width: 180rpx!important;
}
.balanceBtn2{
	background-color: rgba(57, 177, 150, 1)!important;
	font-size: 30rpx!important;
	/* padding:4rpx 40rpx!important; */
	border:1px solid rgba(57, 177, 150, 1)!important;
	width: 180rpx!important;
}