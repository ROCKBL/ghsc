/* pages/addresslist/addresslist.wxss */



.addresslist{

}
.addresslistWrap{
	width: calc(100% - 20px);
	margin: auto;
}
.topLine{
	border-bottom: 1px solid rgba(0,0,0,0.08);
	margin-bottom: 5px;
}
.addressUnit{
	display: flex;
	align-items: center;
	padding-bottom: 5px;
	border-bottom: 1px solid rgba(0,0,0,0.08);
	padding-top: 5px;
}
.addressUnitLeft{
	/* width: 50px; */
	/* flex-basis: 60px; */
}
.addressUnitMid{
	margin-left: 20rpx;

}
.addressUnitRight{
	display: flex;
	align-items: center;
	margin-left: auto;
}
.addressName{
	color: #333333;
	font-size: 34rpx;
	font-weight: bold;
	margin-bottom: 5px;
	width: 56px;
}
.addressDefaultActive{
	color: #EE0B39;
	font-size: 24rpx;
	border:1px solid rgba(215, 55, 63, 0.5);
	border-radius: 10rpx;
	padding: 4rpx 10rpx;
	width: fit-content;
}
.addressDefaultUnactive{
	font-size: 24rpx;
	color: #999;
	width: fit-content;
}

.addressPhone{
	font-weight: bold;
	font-size: 34rpx;
	color: #333333;
	margin-bottom: 5px;
}
.addressArea{
	font-size: 26rpx;
	color: #939796;
}
.addressIcon{
	/* font-size: 30rpx; */
	margin: 0px 5px;
	color: rgba(0, 0, 0, 0.6);
}

.bottomBtn{
	/* position: fixed; */
	/* bottom: 0px; */
	/* left: 0px; */
	width: 100%;
