/* pages/mypoints/mypoints.wxss */

.pointsPage{
	background: #F8F8F8;
	min-height: 100vh;
}

.pointsBlock{
	width: calc(100% - 60rpx);
	margin: auto;
	background-color: rgba(255, 255, 255, 1);
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-top: 30rpx;
	padding-top: 72rpx;
	padding-bottom: 52rpx;
}
.pointsImg{
	width: 130rpx;
	height: 130rpx;
	margin-bottom: 56rpx;
}
.pointsValue{
	color: rgba(51, 51, 51, 1);
	font-size: 64rpx;
	font-weight: bold;
	margin-bottom: 10rpx;
}
.pointsLabel{
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
	margin-bottom: 50rpx;
	font-weight: bold;
}
.pointsBtn{
	font-size: 30rpx!important;
	background-color: rgba(57, 177, 150, 1)!important;
	padding:4rpx 40rpx!important;

}